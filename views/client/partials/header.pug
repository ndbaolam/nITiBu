include ../mixins/search.pug

header.header
    .container
        .row.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/logo.svg", alt="Logo")
            .col-6 
                +search(keyword)

            .col-12
                .inner-menu
                    ul
                        li
                            a(href="/") Trang chủ
                        if(user)
                            li
                                a(href="/user/info") Tài khoản
                            li
                                a(href="/user/logout") Đăng xuất
                        else
                            li
                                a(href="/user/login") Đăng nhập
                            li
                                a(href="/user/register") Đăng ký
