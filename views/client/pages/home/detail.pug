extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)
    
    .product-detail
        .container.my-5
            .row
                .col-6
                    .inner-thumb
                        img(src=course.thumbnail, alt=course.title)
                .col-6
                    h1(class="inner-title") #{course.title}

                    if (course.price)
                        div(class="inner-price-old") #{course.price}$
                    
                    if(course.status)
                        a(
                            href=`/watch/${course.slug}`
                            class="btn btn-success btn-block"
                        ) Học ngay
                    else
                        a(
                            href=`/buy/${course.slug}`
                            class="btn btn-success btn-block"
                        ) Mua khoá học

    hr

    .container.my-5
        .row
            .col-12
                +box-head("Mô tả khoá học")
                .inner-desc !{course.description}