extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row 
            h1 
        .row
            h1
        .row 
            h1 
        .row
            h1
        .row 
            h1

    .container.my-3
        .row
            .col-12
                +box-head("Thông tin tài khoản")

                if (user.avatar)
                    img(src=user.avatar width="150px" class="mb-3")

                if (user.fullName)
                    p Họ tên: <b>#{user.fullName}</b>

        .row
            .col-12
                +box-head("Danh sách khoá học đã mua")

        .row
                if(courses && courses.length > 0)
                    each item in courses
                        .col-4.mb-3
                            .product-item
                                .inner-image
                                    a(href=`/detail/${item.slug}`)
                                        img(src=item.thumbnail, alt=item.title)
                                .inner-content
                                    h3.inner-title
                                        a(href=`/detail/${item.slug}`) #{item.title}
                else
                    div(class="col-12")
                        div(class="alert alert-danger") Không tìm thấy khoá học nào.